<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chm.book.oauth2.mapper.SysUserMapper">
    <resultMap id="resultMap" type="com.chm.book.oauth2.domain.SysUser">
      <result column="id" property="id" jdbcType="INTEGER"/>
      <result column="username" property="username" jdbcType="VARCHAR"/>
      <result column="password" property="password" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="selectSysUser" resultMap="resultMap">
      select * from sys_user
      where username = #{username}
    </select>

    <select id="selectSysUserByClientId" resultMap="resultMap">
        select * from sys_user user inner join oauth_client_group client_group on user.username = client_group.username
        where client_group.client_id = #{clientId} limit 1
    </select>

    <insert id="insert" parameterType="com.chm.book.oauth2.domain.SysUser" keyColumn="id" useGeneratedKeys="true">
        insert into sys_user (username, password, email)
        values (#{username}, #{password}, #{email})
    </insert>
</mapper>
