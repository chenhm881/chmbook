<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="defaultStatementTimeout" value="86400000"/>
        <setting name = "cacheEnabled" value = "true" />
    </settings>
    <typeAliases>
        <typeAlias alias="Integer" type="java.lang.Integer" />
        <typeAlias alias="Long" type="java.lang.Long" />
        <typeAlias alias="String" type="java.lang.String" />
        <typeAlias alias="Double" type="java.lang.Double" />
        <typeAlias alias="HashMap" type="java.util.HashMap" />
        <typeAlias alias="LinkedHashMap" type="java.util.LinkedHashMap" />
        <typeAlias alias="ArrayList" type="java.util.ArrayList" />
        <typeAlias alias="LinkedList" type="java.util.LinkedList" />
    </typeAliases>
    <mappers>
        <mapper resource="mappers/TBlogMapper.xml" />
        <mapper resource="mappers/ArticleMapper.xml" />
        <mapper resource="mappers/TagMapper.xml" />
        <mapper resource="mappers/CategoryMapper.xml" />
        <mapper resource="mappers/ArticleTagMapper.xml" />
        <mapper resource="mappers/CommentMapper.xml" />
        <mapper resource="mappers/LikeStateMapper.xml" />
    </mappers>
</configuration>
